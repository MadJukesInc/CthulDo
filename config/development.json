{

    "express": {
        "view cache": false,
        "view engine": "dust",
        "views": "path:./public/templates"
    },

    "view engines": {
        "dust": {
            "module": "engine-munger",
            "renderer": {
                "method": "dust",
                "arguments": [
                    { "cache": false },
                    {
                        "views": "config:express.views",
                        "view engine": "config:express.view engine",
                        "specialization": "config:specialization",
                        "i18n": "config:i18n"
                    }
                ]
            }
        }
    },

    "middleware": {

        "devtools": {
            "enabled": true,
            "priority": 35,
            "module": {
                "name": "kraken-devtools",
                "arguments": [
                    "path:./public",
                    "path:./.build",
                    {
                        "browserify": {
                            "module": "kraken-devtools-browserify",
                            "files": "/js/**/*.js",
                            "transform": [
                                [
                                    "dustjs-browserify",
                                    {
                                        "path": "public/templates"
                                    }
                                ],
                                "debowerify"
                            ]
                        },
                        "template": {
                            "module": "kraken-devtools/plugins/dustjs",
                            "files": "/templates/**/*.js",
                            "base": "templates",
                            "i18n": "config:i18n"
                        },
                        "css": {
                            //TODO add option to add more middlewares
                            //eg add field called "middleware"
                            "module": "path:./lib/middleware/bootstrap2styl",
                            "files": "/css/**/*.css"
                        },
                        "copier": {
                            "module": "kraken-devtools/plugins/copier",
                            "files": "**/*"
                        }
                    }
                ]
            }
        },

        "appsec": {
            "enabled": false,
            "priority": 111,
            "module": "lusca"
        }

    },

    "databaseConfig": {
        "database": "todo_test",
        "user": "postgres",
        "password": "",
        "options": {
            "host": "localhost",
            "dialect": "postgres",
            "pool": {
                "max": 5,
                "min": 0,
                "idle": 10000
            }
        }
    }
}
