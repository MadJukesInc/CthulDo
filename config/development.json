{
    "express": {
        "view cache": false,
        "view engine": "dust",
        "views": "path:./public/templates"
    },
    "view engines": {
        "dust": {
            "module": "engine-munger",
            "renderer": {
                "method": "dust",
                "arguments": [
                    {
                        "cache": false
                    },
                    {
                        "views": "config:express.views",
                        "view engine": "config:express.view engine",
                        "specialization": "config:specialization",
                        "i18n": "config:i18n"
                    }
                ]
            }
        }
    },
    "middleware": {
        "devtools": {
            "enabled": true,
            "priority": 35,
            "module": {
                "name": "kraken-devtools",
                "arguments": [
                    "path:./public",
                    "path:./.build",
                    {
                        "browserify": {
                            "module": "kraken-devtools-browserify",
                            "files": "/js/**/*.js",
                            "transform": [
                                [
                                    "dustjs-browserify",
                                    {
                                        "path": "public/templates"
                                    }
                                ],
                                "debowerify"
                            ]
                        },
                        "template": {
                            "module": "kraken-devtools/plugins/dustjs",
                            "files": "/templates/**/*.js",
                            "base": "templates",
                            "i18n": "config:i18n"
                        },
                        "css": {
                            //TODO add option to add more middlewares
                            //eg add field called "middleware"
                            "module": "path:./lib/middleware/bootstrap2styl",
                            "files": "/css/**/*.css"
                        },
                        "copier": {
                            "module": "kraken-devtools/plugins/copier",
                            "files": "**/*"
                        }
                    }
                ]
            }
        },
        "appsec": {
            "enabled": false,
            "priority": 111,
            "module": "lusca"
        },
        "session": {
            "enabled": true,
            "priority": 100,
            "module": {
                "name": "express-session",
                "arguments": [
                    {
                        "key": "",
                        "secret": "keyboard cat",
                        "cookie": {
                            "path": "/",
                            "httpOnly": true,
                            "maxAge": null
                        },
                        "resave": true,
                        "saveUninitialized": true,
                        "proxy": null
                    }
                ]
            }
        },
        "flash": {
            "priority": 91,
            "enabled": true,
            "module": {
                "name":"connect-flash",
                "method": "flash"
            }
        }
    }
}
